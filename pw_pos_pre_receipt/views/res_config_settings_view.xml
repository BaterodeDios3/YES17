<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_pre_receipt" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.receipt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting help="Print order receipt without payment">
                    <field name="enable_presale"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
