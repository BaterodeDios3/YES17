<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_form_inherit_yestore" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.yestore</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div/field[@name='pricelist_id']" position="before">
                <field name="cannot_edit_pricelist" invisible="1" />
            </xpath>
            <xpath expr="//div/field[@name='pricelist_id']" position="attributes">
                <attribute name="readonly">state in ['cancel', 'sale'] or cannot_edit_pricelist</attribute>
            </xpath>
            <xpath expr="//field/tree/field[@name='price_unit']" position="before">
                <field name="cannot_edit_pricelist" optional="hide"/>
            </xpath>
            <xpath expr="//field/tree/field[@name='price_unit']" position="attributes">
                <attribute name="readonly">cannot_edit_pricelist</attribute>
            </xpath>
        </field>
    </record>
</odoo>